@{
    ViewBag.Title = "AddFaculty";
}

@model FacultyApplication.Models.Faculty

<h2>Faculty</h2>
@using (Html.BeginForm("AddFaculty", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(x => x.Id)
    <div class="mb-3">

        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Enter Faculty" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })

    </div>

    <div class="mb-3">
        <label for="lblFoundingYear">Founding Year</label>
        @Html.TextBoxFor(x => x.FoundingYear, new { @class = "form-control", placeholder = "Enter Founding Year" })
        @Html.ValidationMessageFor(x => x.FoundingYear, "", new { @class = "text-danger" })

    </div>

    <div class="mb-3">
        <label for="lblDescription">Description</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Enter Description", rows = "8" })
        @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })

    </div>

    <div class="btn-toolbar">
        <div class="btn-group btn-toolbar  mx-2" role="group">
            <button class="btn btn-primary">Save</button>

        </div>
        <div class="btn-group btn-toolbar  mx-2" role="group">
            <button class="btn btn-primary">Cancel</button>
        </div>
    </div>
}